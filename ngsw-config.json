{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": ["/favicon.ico", "/index.html", "/manifest.webmanifest", "/*.css", "/*.js"]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": ["/assets/**", "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "stats",
      "urls": ["/v1/stats/**"],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "24h",
        "maxSize": 1000,
        "timeout": "10s"
      }
    },
    {
      "name": "user",
      "urls": ["/v1/users/me"],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "10m",
        "maxSize": 10,
        "timeout": "10s"
      }
    }
  ]
}
