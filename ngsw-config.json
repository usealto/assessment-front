{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": ["/favicon.ico", "/index.html", "/manifest.webmanifest", "/*.css", "/*.js"]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/icons/**",
          "/assets/img/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    },
    {
      "name": "avatars",
      "installMode": "prefetch",
      "resources": {
        "files": ["/assets/avatars/**"]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "stats",
      "urls": ["/v1/stats/**"],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "24h",
        "maxSize": 2000,
        "timeout": "10s"
      }
    },
    {
      "name": "tags",
      "urls": ["/v1/tags"],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "10m",
        "maxSize": 2000,
        "timeout": "10s"
      }
    },
    {
      "name": "questions",
      "urls": ["/v1/questions"],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "1h",
        "maxSize": 2000,
        "timeout": "10s"
      }
    },
    {
      "name": "teams",
      "urls": ["/v1/teams"],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "10m",
        "maxSize": 2000,
        "timeout": "10s"
      }
    },
    {
      "name": "programs",
      "urls": ["/v1/programs"],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "10m",
        "maxSize": 2000,
        "timeout": "10s"
      }
    },
    {
      "name": "user",
      "urls": ["/v1/users/me"],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "10m",
        "maxSize": 10,
        "timeout": "10s"
      }
    },
    {
      "name": "SVG",
      "urls": ["/fluentui-emoji"],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "10d",
        "maxSize": 200,
        "timeout": "5s"
      }
    }
  ]
}
